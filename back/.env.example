# ============================================
# Configuración de la Aplicación
# ============================================

APP_NAME=FastAPI Template
APP_VERSION=0.1.0
DEBUG=True

# ============================================
# Configuración de Base de Datos (PostgreSQL)
# ============================================

# Opción 1: URL completa de conexión (recomendado)
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Opción 2: Variables individuales (si no se proporciona DATABASE_URL)
# POSTGRES_USER=user
# POSTGRES_PASSWORD=password
# POSTGRES_SERVER=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=dbname

# Para Docker Compose, usar:
# DATABASE_URL=postgresql://user:password@db:5432/dbname

# ============================================
# Configuración de Seguridad
# ============================================

# Clave secreta para JWT (¡IMPORTANTE! Cambiar en producción)
# Generar una clave segura con: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32

# Algoritmo para JWT
ALGORITHM=HS256

# Tiempo de expiración del token de acceso (en minutos)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# Configuración de CORS
# ============================================

# Orígenes permitidos para CORS
# Para desarrollo: ["*"]
# Para producción: ["https://tudominio.com", "https://www.tudominio.com"]
CORS_ORIGINS=["*"]

